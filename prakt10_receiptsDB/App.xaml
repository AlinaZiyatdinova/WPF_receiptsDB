<Application x:Class="prakt10_receiptsDB.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:prakt10_receiptsDB"
             xmlns:converters="clr-namespace:prakt10_receiptsDB.Converter"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="button_StaticResourceMode">
            <Setter Property="Background" Value="#E9FFF9"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Width" Value="170"/>
        </Style>

        <Style TargetType="TextBox" x:Key="textBox_StaticResourceMode">
            <Setter Property="Background" Value="#E9FFF9"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Width" Value="170"/>
        </Style>
        
        <SolidColorBrush x:Key="Background" Color="#D64045"/>

        <SolidColorBrush x:Key="textColorBorder" Color="#E9FFF9"/>

        <converters:ImagePathConverter x:Key="imagePathConverter"/>
        <converters:IngridientIdConverter x:Key="idIngridientConverter"/>
    </Application.Resources>
</Application>
